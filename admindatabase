import sqlite3
conn = sqlite3.connect('allergy_app.db')
#User table
conn.execute('''
CREATE TABLE users (
    user_id INTEGER PRIMARY KEY AUTOINCREMENT, #Unique identifier for each user
    username TEXT NOT NULL,
    email TEXT NOT NULL
);
''')
#Admin table
conn.execute('''
CREATE TABLE admins (
    admin_key INTEGER PRIMARY KEY AUTOINCREMENT,
    username TEXT NOT NULL,
    password TEXT NOT NULL
);
''')
#Recipe table
conn.execute('''
CREATE TABLE recipes (
    recipe_id INTEGER PRIMARY KEY AUTOINCREMENT,
    title TEXT NOT NULL,
    ingredients TEXT NOT NULL,
    contains_allergens TEXT NOT NULL,
    instructions TEXT NOT NULL,
    user_id INTEGER,
    FOREIGN KEY (user_id) REFERENCES users(user_id)
);
''')
conn.commit()
conn.close()

